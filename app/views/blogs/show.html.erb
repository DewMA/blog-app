<div class="blog_page">
    <h1><%= @blog.title %></h1>
    <p class="publish_date">publish at: <%= get_time(@blog.created_at)%></p>
    <hr>
    <p><%= @blog.description %></p>
    <% if is_admin %>
        <hr>
        <%= link_to "edit", edit_blog_path(@blog), class: "edit-btn" %>
    <% end %>
</div>