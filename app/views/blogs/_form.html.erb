<%= form_with(model: blog, local: true) do |f| %>
    <% if flash[:form_error] %>
        <div class="errors">
            <% flash[:form_error].each do |err| %>
                <p>-<%= err%></p>
            <% end %>
        </div>
    <% end %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :description %>
    <%= f.text_area :description%>
    <%= f.submit nil, class: "form-btn" %>
<% end %>